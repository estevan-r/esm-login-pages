---
import Layout from '@/layouts/Layout.astro'
import { MainHeader } from '@/components/Header'
import Footer from '@/components/Footer'
import SkipContent from '@/components/SkipContent'
import AlertDialog from '@/components/Alert'
import AlertContent from '@/components/AlertContent'
import Wrapper from '@/components/Wrapper'
import LoginCard from '@/components/LoginCard'
import LoginForm from '@/components/LoginForm'
import Content from '@/components/Content'
import { AccountButton, CreateAccount, NewsAndAlerts, ExistingAccount, ScamProtection } from "@/components/InfoCards"
---

<Layout title="Employer Login | CDLE">
	<SkipContent />
	<MainHeader client:load/>
	<Wrapper>
		<AlertDialog client:load title='Attention Users'>
			<AlertContent/>
		</AlertDialog>
		<LoginForm>
			<LoginCard client:load description="Employer Login" />
			<CreateAccount>
				<AccountButton 
					text="Create an Account"
					uri="/employer-registration"
				/>
			</CreateAccount>
		</LoginForm>
		<Content>
			<NewsAndAlerts customerType="employers" />
			<ExistingAccount />
			<ScamProtection />
		</Content>
	</Wrapper>
	<Footer client:load />
</Layout>
